<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Post_Detalle"
        android:layout_marginBottom="@dimen/detailLong"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="@dimen/LongitudFormulariosArriba"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/item_detail_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="@dimen/LongitudFormulariosIzquierda"
                    app:civ_border_color="#BFBBBB"
                    app:civ_border_width="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_detail_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/LongitudFormulariosIzquierda"
                    android:layout_marginRight="@dimen/LongitudFormulariosDerecha"
                    android:text="@string/item_detail_nombre_usuario_example"
                    android:textColor="@color/colorText" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_detail_image_post"
                android:layout_width="400dp"
                android:layout_height="161dp" />

            <TextView
                android:id="@+id/item_detail_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/LongitudFormulariosIzquierda"
                android:layout_marginRight="@dimen/LongitudFormulariosDerecha"
                android:text="@string/item_detail_nombre_usuario_example"
                android:textColor="@color/colorText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="106dp"
                    android:layout_height="29dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_action_like"
                        tools:ignore="VectorDrawableCompat" />
                    <TextView
                        android:id="@+id/item_detail_username_likes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="106dp"
                    android:layout_height="29dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_comment"
                        tools:ignore="VectorDrawableCompat" />
                    <TextView
                        android:id="@+id/item_detail_username_comments"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Comment"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>


</androidx.cardview.widget.CardView>